{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "WeddingsTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "Weddings",
        "AttributeDefinitions": [
          {
            "AttributeName": "WeddingID",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "WeddingID",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST"
      }
    },
    "PhotosTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "Photos",
        "AttributeDefinitions": [
          {
            "AttributeName": "ImageKey",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "ImageKey",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST"
      }
    },
    "GuestSessionsTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "GuestSessions",
        "AttributeDefinitions": [
          {
            "AttributeName": "SessionID",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "SessionID",
            "KeyType": "HASH"
          }
        ],
        "TimeToLiveSpecification": {
          "AttributeName": "ExpiresAt",
          "Enabled": true
        },
        "BillingMode": "PAY_PER_REQUEST"
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": "serverless-framework-deployments-ap-south-1-e4ac7174-e4ae",
      "Export": {
        "Name": "sls-wedding-photo-app-dev-ServerlessDeploymentBucketName"
      }
    }
  }
}